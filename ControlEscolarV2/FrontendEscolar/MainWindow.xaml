<Window x:Class="FrontendEscolar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrontendEscolar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtUser" HorizontalAlignment="Center" Margin="0,209,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" FontSize="16"/>
        <PasswordBox x:Name="pbPassword" HorizontalAlignment="Center" Margin="0,310,0,0" VerticalAlignment="Top" Width="212" FontSize="16"/>
        <Label Content="Nombre de usuario" HorizontalAlignment="Left" Margin="294,178,0,0" VerticalAlignment="Top"/>
        <Label Content="Contraseña" HorizontalAlignment="Left" Margin="294,279,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.538,0.597"/>
        <Label Content="INICIO DE SESIÓN" HorizontalAlignment="Center" Margin="0,48,0,0" VerticalAlignment="Top" FontSize="48" Foreground="#FF2055BB" FontFamily="Rockwell Extra Bold"/>
        <Button x:Name="btnIniciarSesion" Content="Iniciar Sesión" HorizontalAlignment="Left" Margin="620,380,0,0" VerticalAlignment="Top" FontSize="16" Click="btnIniciarSesion_Click"/>

    </Grid>
</Window>
